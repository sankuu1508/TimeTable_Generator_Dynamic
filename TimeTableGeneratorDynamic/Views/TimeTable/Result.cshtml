@model List<List<string>>

<h2>Generated Time Table</h2>

<style>
    table {
        border-collapse: collapse;
        width: 80%;
        margin: 20px 0;
    }

    th, td {
        border: 1px solid #000;
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            @for (int i = 0; i < Model[0].Count; i++)
            {
                <th>Day @(i + 1)</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                @foreach (var subject in row)
                {
                    <td>@subject</td>
                }
            </tr>
        }
    </tbody>
</table>
